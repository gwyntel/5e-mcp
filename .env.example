# 5e-mcp Storage Configuration
# Copy this file to .env and modify as needed

# Storage backend: memory, disk, or redis
STORAGE_BACKEND=memory

# Disk storage configuration (used when STORAGE_BACKEND=disk)
STORAGE_DISK_DIRECTORY=./save_data

# Redis configuration (used when STORAGE_BACKEND=redis)
STORAGE_REDIS_HOST=localhost
STORAGE_REDIS_PORT=6379
STORAGE_REDIS_PASSWORD=
STORAGE_REDIS_DB=0

# Optional: Encryption key for sensitive data (base64 encoded)
# Generate with: python -c "import base64; print(base64.b64encode(b'your-secret-key-here').decode())"
STORAGE_ENCRYPTION_KEY=

# Namespace prefix for all storage keys
STORAGE_NAMESPACE_PREFIX=5e_mcp
